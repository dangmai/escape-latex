{
  "name": "escape-latex",
  "version": "1.2.0",
  "engines": {
    "node": ">= 18"
  },
  "description": "Escape LaTeX special characters with Javascript",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "pretest": "pnpm run lint",
    "preversion": "pnpm test && pnpm run build",
    "postversion": "git push && git push --tags",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "init": "mkdir dist",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean && pnpm run init",
    "build": "babel ./src -d ./dist --ignore \"src/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dangmai/escape-latex"
  },
  "keywords": [
    "latex",
    "escape"
  ],
  "devDependencies": {
    "@babel/cli": "7.28.6",
    "@babel/core": "7.29.0",
    "@babel/plugin-transform-object-assign": "7.27.1",
    "@babel/preset-env": "7.29.0",
    "@babel/register": "7.28.6",
    "@biomejs/biome": "2.4.4",
    "@vitest/coverage-v8": "4.0.18",
    "rimraf": "6.1.3",
    "vitest": "4.0.18"
  },
  "author": "Dang Mai",
  "license": "MIT",
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a"
}
