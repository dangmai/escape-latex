{
  "name": "escape-latex",
  "version": "1.2.0",
  "engines": {
    "node": ">= 18"
  },
  "description": "Escape LaTeX special characters with Javascript",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "pretest": "pnpm run lint",
    "preversion": "pnpm test && pnpm run build",
    "postversion": "git push && git push --tags",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "init": "mkdir dist",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean && pnpm run init",
    "build": "babel ./src -d ./dist --ignore \"src/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dangmai/escape-latex"
  },
  "keywords": [
    "latex",
    "escape"
  ],
  "devDependencies": {
    "@babel/cli": "7.28.3",
    "@babel/core": "7.28.5",
    "@babel/plugin-transform-object-assign": "7.27.1",
    "@babel/preset-env": "7.28.5",
    "@babel/register": "7.28.3",
    "@biomejs/biome": "2.3.11",
    "@vitest/coverage-v8": "4.0.16",
    "rimraf": "6.1.2",
    "vitest": "4.0.16"
  },
  "author": "Dang Mai",
  "license": "MIT",
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
