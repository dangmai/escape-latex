{
  "name": "escape-latex",
  "version": "1.2.0",
  "engines": {
    "node": ">= 18"
  },
  "description": "Escape LaTeX special characters with Javascript",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "pretest": "pnpm run lint",
    "preversion": "pnpm test && pnpm run build",
    "postversion": "git push && git push --tags",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "init": "mkdir dist",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean && pnpm run init",
    "build": "babel ./src -d ./dist --ignore \"src/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dangmai/escape-latex"
  },
  "keywords": [
    "latex",
    "escape"
  ],
  "devDependencies": {
    "@babel/cli": "7.28.6",
    "@babel/core": "7.29.0",
    "@babel/plugin-transform-object-assign": "7.27.1",
    "@babel/preset-env": "7.29.0",
    "@babel/register": "7.28.6",
    "@biomejs/biome": "2.4.1",
    "@vitest/coverage-v8": "4.0.18",
    "rimraf": "6.1.3",
    "vitest": "4.0.18"
  },
  "author": "Dang Mai",
  "license": "MIT",
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
