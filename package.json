{
  "name": "escape-latex",
  "version": "1.2.0",
  "engines": {
    "node": ">= 18"
  },
  "description": "Escape LaTeX special characters with Javascript",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "pretest": "pnpm run lint",
    "preversion": "pnpm test && pnpm run build",
    "postversion": "git push && git push --tags",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "init": "mkdir dist",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean && pnpm run init",
    "build": "babel ./src -d ./dist --ignore \"src/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dangmai/escape-latex"
  },
  "keywords": [
    "latex",
    "escape"
  ],
  "devDependencies": {
    "@babel/cli": "7.28.6",
    "@babel/core": "7.29.0",
    "@babel/plugin-transform-object-assign": "7.27.1",
    "@babel/preset-env": "7.29.0",
    "@babel/register": "7.28.6",
    "@biomejs/biome": "2.3.14",
    "@vitest/coverage-v8": "4.0.18",
    "rimraf": "6.1.2",
    "vitest": "4.0.18"
  },
  "author": "Dang Mai",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
