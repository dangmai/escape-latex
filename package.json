{
  "name": "escape-latex",
  "version": "1.2.0",
  "engines": {
    "node": ">= 18"
  },
  "description": "Escape LaTeX special characters with Javascript",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "pretest": "pnpm run lint",
    "preversion": "pnpm test && pnpm run build",
    "postversion": "git push && git push --tags",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "init": "mkdir dist",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean && pnpm run init",
    "build": "babel ./src -d ./dist --ignore \"src/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dangmai/escape-latex"
  },
  "keywords": [
    "latex",
    "escape"
  ],
  "devDependencies": {
    "@babel/cli": "7.28.6",
    "@babel/core": "7.28.6",
    "@babel/plugin-transform-object-assign": "7.27.1",
    "@babel/preset-env": "7.28.6",
    "@babel/register": "7.28.6",
    "@biomejs/biome": "2.3.11",
    "@vitest/coverage-v8": "4.0.17",
    "rimraf": "6.1.2",
    "vitest": "4.0.17"
  },
  "author": "Dang Mai",
  "license": "MIT",
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316"
}
